    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ types_conge.id) }}">
    <button class="noselect"><span class='text'>Delete</span><span class="icon"><svg xmlns="http://www.w3.org/2000/svg"
                                                                                     width="24" height="24"
