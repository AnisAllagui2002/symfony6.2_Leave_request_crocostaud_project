{% extends 'base.html.twig' %}

{% block body %}
    <div class="row h-100">
        <div class="col-12">
            <div id="auth-left">

                <h1 class="auth-title">Add New One</h1>
                <p class="auth-subtitle mb-5">Input your data to register new one to our website.</p>

                <div class="container" style="padding-right: 15%; padding-left: 15%">
                    {{ form_start(form) }}
                    <div class="form-group position-relative has-icon-left mb-4">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-xl', 'placeholder' : "Email"}}) }}
                        {{ form_help(form.email, {'help' : 'Email should be like(exmeple@gmail.com)'}) }}
                        <div class="form-control-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                    </div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        {{ form_widget(form.username , {'attr' :{'class' : 'form-control form-control-xl', 'placeholder' : "Username"}}) }}
                        {{ form_help(form.username, {'help' : 'Type your name'}) }}
                        <div class="form-control-icon">
                            <i class="bi bi-person"></i>
                        </div>
                    </div>

                    <div class="form-group position-relative has-icon-left mb-4">
                        {{ form_widget(form.password , {'attr' :{'class' : 'form-control form-control-xl', 'placeholder' : "Password"}}) }}
                        {{ form_help(form.password, {'help': "Use a hard Password"}) }}
                        <div class="form-control-icon">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                    </div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        {{ form_widget(form.Confirm_password, {'attr' :{'class' : 'form-control form-control-xl', 'placeholder' : "Password"}}) }}
                        {{ form_help(form.Confirm_password, {'help': "Type a the same Password"}) }}
                        <div class="form-control-icon">
                            <i class="bi bi-shield-fill-check"></i>
                        </div>
                    </div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        {{ form_widget(form.role, {'attr' :{'class' : 'form-control form-control-xl', 'placeholder' : "Role"}}) }}
                        {{ form_help(form.role, {'help': " Choose a Role "}) }}
                        <div class="form-control-icon">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Sign Up</button>

                    {{ form_end(form) }}


                </div>

                <div class="text-center mt-5 text-lg fs-4">
                    <p class='text-gray-600'>Already have an account? <a href="{{ path('security_login') }}"
                                                                         class="font-bold">Log
                            in</a>.</p>
                </div>
            </div>
        </div>


    </div>
{% endblock %}